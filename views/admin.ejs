<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/default.css">
  <link rel="stylesheet" href="/css/admin.css">
  <link rel="icon" type="image/png" href="/images/list.png" />
  <title>Guest List</title>
</head>
<body>
  <main>
    <nav>
      <ul id="navList">
        <li><a href='/'>Guest Book</a></li>
        <li><a href='admin'>Guest List</a></li>
      </ul>
    </nav>
    <h2>Guest List</h2>
    <div id="guests">
      <% if(contactList.length > 0) { %>
        <table>
          <thead>
            <tr>
              <th>Last Name</th>
              <th>First Name</th>
              <th>Job Title</th>
              <th>Company</th>
              <th>LinkedIn</th>
              <th>Email</th>
              <th>How We Met</th>
              <th>Other</th>
              <th>Mailing List</th>
              <th>Email Format</th>
              <th>Message</th>
            </tr>
          </thead>
          <tbody>
            <% contactList.forEach(contact => { %>
              <tr>
                <td><%= contact.lname %></td>
                <td><%= contact.fname %></td>
                <td><%= contact.title %></td>
                <td><%= contact.company %></td>
                <td><%= contact.linkedIn %></td>
                <td><%= contact.email %></td>
                <td><%= contact.meet %></td>
                <td><%= contact.other %></td>
                <td><%= contact.mailList ? "Yes" : "No" %></td>
                <td><%= contact.format %></td>
                <td><%= contact.message %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } else { %>
        <h3>No guests to display</h3>
      <% } %>
    </div>
  </main>
</body>
</html>